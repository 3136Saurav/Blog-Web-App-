<%- include('../partials/header.ejs') %>
<div class="ui main text container segment">
    <div class="ui huge header">New Comment to <%= blog.title %></div>
        <form action="/blogs/<%=blog._id%>/comments" method="POST" class="ui form">
            <div class="ui field">
                <label>Text</label>
                <input type="text" name="comment[text]" placeholder="Enter comment here..." required>
            </div>
            <div class="ui field">
                <label>Author</label>
                <input type="text" name="comment[author]" placeholder="Enter name..." required>
            </div>
            <input class="ui olive inverted big button" type="submit" value="Submit">
        </form>
</div>

