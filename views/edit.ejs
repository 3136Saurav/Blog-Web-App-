<%- include('./partials/header.ejs') %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
            <div class="ui field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>" required>
            </div>
            <div class="ui field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>" required>
            </div>
            <div class="ui field">
                <label>Description</label>
                <textarea name="blog[body]" required><%= blog.body %></textarea>
            </div>
            <input class="ui brown inverted big button" value="Update" type="submit">
        </form>
</div>

<%- include('./partials/footer.ejs') %>